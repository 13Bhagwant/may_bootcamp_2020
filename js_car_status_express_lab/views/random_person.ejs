<%- include('./partials/header') %>

  <h1>Random Name Picker</h1>
  <form action="/random_person">
    <div>
      <label for="names">Enter Names separated by commas</label>
      <textarea style="display: block" name="names" id="names" cols="30" rows="10"><%= names %></textarea>
    </div>
    <input type="submit" value="Choose Winner" />
  </form>
  <% if (winner) { %>
    <h3>The winner is <%= winner %></h3>
  <% } %>

<%- include('./partials/footer') %>